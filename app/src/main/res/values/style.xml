<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/margin_x_large
        </item>
        <item name="android:layout_marginTop">@dimen/margin_x_large</item>
        <item name="android:textColorHint">@color/hint_Color</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/long_height</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInputEditText.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!-- app bar-->
    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="elevation">@dimen/elevation_small</item>
    </style>

    <!-- app bar stroke-->
    <style name="AppBarStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/stroke_app_bar</item>
    </style>

    <style name="rankImage">
        <item name="cornerSizeBottomLeft">16%</item>
        <item name="cornerSizeBottomRight">16%</item>
    </style>

    <style name="favouriteImage">
        <item name="cornerSize">16%</item>
    </style>

    <!-- Text Style -->
    <style name="SectionHeader">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
    </style>

    <!--    Card Parent-->
    <style name="CardRecItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
    </style>


    <!--    Card City-->
    <style name="CardRecItem.City">
        <item name="android:layout_height">@dimen/card_item_food_height</item>
        <item name="android:layout_width">@dimen/card_item_kitchen_width</item>
        <item name="cardCornerRadius">@dimen/radius_medium</item>
    </style>

    <dimen name="card_item_food_height">240dp</dimen>
    <dimen name="card_item_kitchen_width">160dp</dimen>
    <dimen name="margin_tiny">2dp</dimen>
    <dimen name="text_small">12sp</dimen>

    <!--    Item Text Parent-->
    <style name="ItemText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <!--    Item Text Name Parent-->
    <style name="ItemText.Name">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
    </style>

    <!--    Item Text Name City-->
    <style name="ItemText.Name.City">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <!--    Item Text Country Parent-->
    <style name="ItemText.Country">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginStart">@dimen/margin_tiny</item>
        <item name="android:layout_marginRight">@dimen/margin_tiny</item>
    </style>

    <!--    Item Text Country-->
    <style name="ItemText.Country.Name">
        <item name="android:textColor">@color/medium_white</item>
        <item name="android:lineSpacingExtra">@dimen/no_width</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>
</resources>