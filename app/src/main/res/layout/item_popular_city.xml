<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="180dp"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginHorizontal="@dimen/margin_small"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/imagedescription"
            android:foreground="@drawable/bg_bottom_linear_transparent"
            android:scaleType="centerCrop"
            tools:src="@drawable/paris" />

        <TextView
            android:id="@+id/text_city_name"
            android:layout_width="@dimen/no_width"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:includeFontPadding="false"
            android:textColor="#DEFAFAFA"
            android:textSize="@dimen/text_large"
            app:layout_constraintBottom_toTopOf="@id/text_country_name"
            app:layout_constraintEnd_toEndOf="@id/text_country_name"
            app:layout_constraintStart_toStartOf="@id/text_country_name"
            tools:text="Paris" />

        <TextView
            android:id="@+id/text_country_name"
            android:layout_width="@dimen/no_width"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:fontFamily="@font/lato"
            android:includeFontPadding="false"
            android:textColor="#99FAFAFA"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="France" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>