<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/on_boarding"
    tools:context=".logic.ui.onboarding.SecondPageFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_x_large"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@id/base_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/base_image"
        android:layout_width="@dimen/big_image"
        android:layout_height="@dimen/big_image"
        android:src="@drawable/paris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        app:shapeAppearanceOverlay="@style/circle" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:fontFamily="@font/lato_bold"
        android:maxWidth="@dimen/width_300dp"
        android:maxLines="2"
        android:text="@string/you_can_find_your_city_here"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/text_x_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:fontFamily="@font/lato"
        android:maxWidth="@dimen/width_300dp"
        android:maxLines="8"
        android:text="@string/ultimately_finding_your_city_is_all_about_exploring_and_getting_to_know_the_area_with_the_right_resources_and_a_little_bit_of_patience_you_can_discover_everything_your_new_home_has_to_offer_and_make_it_a_place_you_ll_love_for_years_to_come_so_don_t_be_afraid_to_start_your_search_today_you_might_just_find_your_dream_city_right_around_the_corner"
        android:textColor="@color/medium_black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintVertical_bias="0.65" />
</androidx.constraintlayout.widget.ConstraintLayout>